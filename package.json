{
  "name": "steve",
  "private": true,
  "workspaces": {
    "packages": [
      "source/cli",
      "source/core",
      "source/sdk",
      "source/server",
      "source/plugins/imessage/packages/*",
      "source/plugins/imessage/packages/*"
    ],
    "catalog": {
      "@tsconfig/bun": "1.0.10",
      "@types/bun": "1.2.21",
      "typescript": "5.9.3",
      "prettier": "3.8.0",
      "consola": "^3.4.2",
      "@hono/standard-validator": "^0.2.2",
      "@standard-community/standard-json": "^0.3.5",
