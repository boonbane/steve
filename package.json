{
  "name": "steve",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": {
    "packages": [
      "packages/cli",
      "packages/app",
      "packages/ui",
      "packages/core",
      "packages/sdk",
      "packages/server",
      "packages/web",
      "packages/relay/server",
      "packages/relay/auth",
      "packages/relay/daemon",
      "packages/plugins/web",
      "packages/plugins/imessage/packages/*",
      "packages/plugins/imessage"
    ],
    "catalog": {
      "@tsconfig/bun": "1.0.10",
      "@types/bun": "1.2.21",
      "typescript": "5.9.3",
      "prettier": "3.8.0",
      "consola": "^3.4.2",
      "@hono/standard-validator": "^0.2.2",
      "@standard-community/standard-json": "^0.3.5",
      "@standard-community/standard-openapi": "^0.2.9",
      "hono": "^4.11.5",
      "hono-openapi": "^1.1.2",
      "@opencode-ai/sdk": "^1.1.60",
      "@opencode-ai/plugin": "^1.1.60",
      "pino": "^10.3.1",
      "pino-pretty": "^13.1.3",
      "pino-roll": "^4.0.0",
      "yargs": "^18.0.0",
      "@types/yargs": "^17.0.33",
      "@spader/node-whisper-cpp": "^0.2.2",
      "zod": "^4.3.6"
    }
  },
  "scripts": {
    "clean": "bun turbo run clean && bun ./tools/clean.ts",
    "typecheck": "bun turbo run typecheck",
    "link": "bun --cwd packages/cli link && bun --cwd packages/relay/daemon link",
    "unlink": "bun --cwd packages/cli unlink && bun --cwd packages/relay/daemon unlink",
    "serve": "bun run --cwd packages/server serve",
    "format": "bun run ./tools/format.ts"
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "@types/bun": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.8.9",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@opencode-ai/plugin": "catalog:",
    "@opencode-ai/sdk": "catalog:",
    "pino": "catalog:",
    "pino-pretty": "catalog:",
    "pino-roll": "catalog:"
  }
}
