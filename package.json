{
  "name": "steve",
  "private": true,
  "workspaces": {
    "packages": [
      "plugins/imessage",
      "plugins/web",
      "source/cli",
      "source/core",
      "source/sdk",
      "source/server"
    ],
    "catalog": {
      "@tsconfig/bun": "1.0.10",
      "@types/bun": "1.2.21",
      "typescript": "5.9.3",
      "prettier": "3.8.0",
      "consola": "^3.4.2",
      "@hono/standard-validator": "^0.2.2",
      "@standard-community/standard-json": "^0.3.5",
      "@standard-community/standard-openapi": "^0.2.9",
      "hono": "^4.11.5",
      "hono-openapi": "^1.1.2",
      "@opencode-ai/sdk": "^1.1.53",
      "yargs": "^18.0.0",
      "@types/yargs": "^17.0.33",
      "zod": "^4.3.6",
      "node-whisper-cpp": "*"
    }
  },
  "scripts": {
    "typecheck": "tsc --build",
    "link": "bun run --cwd source/cli link",
    "unlink": "bun run --cwd source/cli unlink",
    "serve": "bun run --cwd source/server serve",
    "format:swift": "swift format --configuration .swift-format --in-place --recursive source/ios",
    "format:ts": "prettier --write \"source/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "format": "bun run format:swift && bun run format:ts"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@tsconfig/bun": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@node-whisper-cpp/mac-arm64-metal": ".cache/whisper/npm/@node-whisper-cpp/mac-arm64-metal/node-whisper-cpp-mac-arm64-metal-0.0.1.tgz",
    "node-whisper-cpp": ".cache/whisper/npm/node-whisper-cpp/node-whisper-cpp-0.0.1.tgz",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0"
  }
}
