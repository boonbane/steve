---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
---

<StarlightPage frontmatter={{ title: 'OpenSteve', template: 'splash' }}>
	<main class="hero">
		<h1>Local-first AI assistant</h1>
		<p>
			OpenSteve runs close to your machine and syncs securely through relay.
		</p>
	</main>

	<style>
		.hero {
			margin: 0 auto;
			max-width: 72rem;
			padding: 4rem 1.5rem 5rem;
		}

		.hero h1 {
			margin: 0;
			font-size: clamp(2rem, 6vw, 3.5rem);
			line-height: 1.05;
			color: var(--sl-color-white);
		}

		.hero p {
			max-width: 42rem;
			margin: 1rem 0 0;
			color: var(--sl-color-gray-2);
			font-size: 1.05rem;
			line-height: 1.6;
		}

	</style>
</StarlightPage>
