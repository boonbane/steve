---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import HelloCounter from "../components/account/hello-counter";
---

<StarlightPage frontmatter={{ title: "Account", template: "doc" }}>
  <p>This page is rendered with Starlight and hydrates a Solid component.</p>
  <HelloCounter client:load />

  <style>
    .counter {
      margin-top: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      max-width: 20rem;
    }

    .counter button {
      width: fit-content;
      border: 1px solid var(--sl-color-gray-5);
      border-radius: 0.6rem;
      padding: 0.45rem 0.8rem;
      background: var(--sl-color-bg-nav);
      color: var(--sl-color-white);
      cursor: pointer;
    }
  </style>
</StarlightPage>
